{
  "name": "feeblo",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "@cloudflare/workers-types": "^4.20251213.0",
      "better-auth": "^1.4.18",
      "alchemy": "^0.82.1",
      "effect": "^3.19.19",
      "@effect/sql-pg": "^0.50.3",
      "@effect/rpc": "^0.73.2",
      "@effect/platform-bun": "^0.87.1",
      "@effect/platform": "^0.94.5",
      "@dotenvx/dotenvx": "^1.51.0"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @feeblo/db db:push",
    "db:studio": "turbo -F @feeblo/db db:studio",
    "db:generate": "turbo -F @feeblo/db db:generate",
    "db:migrate": "turbo -F @feeblo/db db:migrate",
