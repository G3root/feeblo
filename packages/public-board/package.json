{
  "name": "@feeblo/public-board",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.js"
    },
    "./styles.css": "./src/styles/index.css"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:js": "mkdir -p dist && printf 'import PublicBoardApp from \"../src/app/public-board-app.svelte\";\\n\\nexport { PublicBoardApp };\\n' > dist/index.js",
    "build:css": "tailwindcss -i src/styles/index.css -o dist/styles.css --minify",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "build": "bun run clean && bun run build:js && bun run build:css && bun run build:types",
    "dev:css": "tailwindcss -i src/styles/index.css -o dist/styles.css --watch",
    "dev:types": "tsc -p tsconfig.json --emitDeclarationOnly --watch",
    "dev": "bun run clean && (bun run dev:css & bun run dev:types & wait)"
  },
  "dependencies": {
    "@feeblo/auth": "workspace:*",
    "@feeblo/rpc-client": "workspace:*",
    "@lucide/svelte": "^0.561.0",
    "@tanstack/query-db-collection": "catalog:",
    "@tanstack/svelte-db": "catalog:",
    "@tanstack/svelte-query": "^6.0.18",
    "bits-ui": "^2.14.4",
    "clsx": "catalog:",
    "effect": "catalog:",
    "formsnap": "^2.0.1",
    "sv-router": "^0.14.0",
    "svelte": "catalog:"
  },
  "devDependencies": {
    "@internationalized/date": "^3.10.0",
    "@tailwindcss/cli": "catalog:",
    "shadcn": "catalog:",
    "sveltekit-superforms": "^2.28.1",
    "tailwind-merge": "catalog:",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "catalog:",
    "tw-animate-css": "catalog:",
    "typescript": "catalog:"
  }
}
